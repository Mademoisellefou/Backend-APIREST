<form action="/pokemon/search" method="POST">
    <input type="text" name="search" placeholder="search...">
    <input type="submit" value="Find">
</form>

<ul>
    {{#each pokemonList}}
    <li>
        <a href="/pokemon/{{npn}}">
        <span>#{{npn}}:{{name}}</span>
        </a>
    </li>
    {{/each}}
</ul>
<a href="/pokemon/new">Add a Pokemon to the Index</a>